<% layout('/layouts/boilerplate') -%>



    <div class="row mt-3 mb-3">
        <div class="col-8 offset-3">
            <h3>
                <%=listing.title%>
            </h3>
        </div>
        
            <div class="row justify-content-center"> <!-- Centering the card properly -->
                <div class="col-lg-6 col-md-8 col-sm-10 col-12"> <!-- Adjusting width for different screen sizes -->
                    <div class="card show-card listing-card show-hover shadow-sm border-0">
                        
                        <!-- Responsive Image -->
                        <img src="<%= listing.image.url %>" class="card-img-top show-img img-fluid" style="height: 20rem; object-fit: cover;" alt="Listing Image">
        
                        <div class="card-body show-text">
                            <p class="card-text mb-2">
                                <i>Posted By <%= listing.owner.username %></i>
                            </p>
                            
                            <p class="card-text">
                                <%= listing.description %><br>
                                <strong>&#8377;<%= listing.price.toLocaleString("en-IN") %></strong><br>
                                <%= listing.location %><br>
                                <%= listing.country %>
                            </p>
                        </div>
        
                    </div>
                </div>
            </div>
       
        

        <br>




        <div class="btns">
            <!-- Edit Button -->
            <a href="/listing/<%= listing._id %>/edit" class="btn btn-dark btn-edit">Edit</a>
          
            <!-- Delete Button -->
            <form method="post" action="/listing/<%= listing._id %>?_method=Delete">
              <button type="submit" class="btn btn-dark btn-delete">Delete</button>
            </form>
          </div>

        <hr>
        <div class="col-8 offset-3">
            <h4>Leave a Review</h4>
            <form action="/listing/<%=listing.id%>/reviews" method="post" class="needs-validation" novalidate>

                <div class="mb-3 mt-3">

                    <label for="rating" class="form-label"><b>Rating</b></label>

                    <fieldset class="starability-slot">

                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                            aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>

                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label"><b>Comment</b></label>
                    <textarea name="review[comment]" id="comment" rows="5" placeholder="Add some comment" cols="6" style="width: 60%;"  class="form-control textarea-bg"
                        required></textarea>
                    <div class="invalid-feedback"> Please Add Some Comments for Review </div>
                </div>

                <button class="btn outline btn-outline-dark">Submit</button>
            </form>
            <br>
            <h4>All Reviews</h4>

            <div class="row g-3"> 
                <% for (let review of listing.reviews) { %>
                    <div class="col-lg-4 col-md-6 col-sm-8 d-flex">  <!-- Ensures equal height for all cards -->
                        <div class="card h-80 shadow-sm border-0 review-bg d-flex flex-column "> 
                            
                            <div class="card-body review-box flex-grow-1"> <!-- Ensures body takes full space -->
                                <h5 class="card-title text-primary fw-bold review-owner"> <b style="color: rgb(50, 22, 229);">PostBy  </b>--> <%= review.author.username %></h5> 
                                
                                <p class="starability-result card-text text-warning fw-semibold" data-rating="<%= review.rating %>">
                                    <%= review.rating %> ‚≠ê
                                </p>
                                
                                <p class="card-text  review-comment review-text">
                                    <%= review.comment %>
                                </p>
                            </div>
            
                            <!-- FIX: This keeps the footer at the bottom always -->
                            <div class="card-footer bg-transparent border-0 p-2 w-100">  
                                <form method="POST" action="/listing/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                    <button class="btn btn-dark btn-sm w-100 delete-btn">Delete</button> 
                                </form>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
            
        </div>
    </div>
